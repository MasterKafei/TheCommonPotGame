{% extends '@Layout/Page/Default/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    Connexion
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-6 col-lg-4 col-form-label">{{ form_label(form._username) }}</label>
                        <div class="col-sm-6 col-lg-8">
                            {{ form_widget(form._username) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-lg-4 col-form-label">{{ form_label(form._password) }}</label>
                        <div class="col-sm-6 col-lg-8">
                            {{ form_widget(form._password) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-lg-4 col-form-label">{{ form_label(form._remember_me) }}</label>
                        <div class="col-sm-6 col-lg-8">
                            {{ form_widget(form._remember_me) }}
                        </div>
                    </div>
                </div>
                <input class="card-footer btn btn-primary bg-primary text-white" type="submit" value="Se connecter">
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}